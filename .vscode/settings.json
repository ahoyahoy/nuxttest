{
    "eslint.useFlatConfig": true,
    // Disable the default formatter, use eslint instead
    "prettier.enable": false,
    "editor.formatOnSave": false,
    // Auto fix
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "never"
    },
    // Silent the stylistic rules in you IDE, but still auto fix them
    "eslint.rules.customizations": [
        {
            "rule": "*sort-imports",
            "severity": "off"
        },
        {
            "rule": "style/*",
            "severity": "off"
        },
        {
            "rule": "*-indent",
            "severity": "off"
        },
        {
            "rule": "*-spacing",
            "severity": "off"
        },
        {
            "rule": "*-spaces",
            "severity": "off"
        },
        {
            "rule": "*-order",
            "severity": "off"
        },
        {
            "rule": "*-dangle",
            "severity": "off"
        },
        {
            "rule": "*-newline",
            "severity": "off"
        },
        {
            "rule": "*quotes",
            "severity": "off"
        },
        {
            "rule": "*semi",
            "severity": "off"
        }
    ],
    // Enable eslint for all supported languages
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue",
        "html",
        "markdown",
        "json",
        "jsonc",
        "yaml"
    ],
    "search.exclude": {
        "dist": true,
    },
    "files.exclude": {
        "**/*-lock.yaml": true,
        "**/*-lock.json": true,
        "node_modules": false,
    },
    "workbench.colorCustomizations": {
        "errorLens.errorBackground": "#e4545410",
        "errorLens.errorForeground": "#ff6464df",
        "errorLens.warningBackground": "#ff942f07",
        "errorLens.warningForeground": "#fa973a50"
    },
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "typescript.format.enable": true
}